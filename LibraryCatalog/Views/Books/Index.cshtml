@{
  Layout = "_Layout";
}

@using LibraryCatalog.Models;

<div class="view-header"><h2>Books</h2></div>

<div class="view-body index">
  @if (@Model.Count == 0)
  {
    <h3>No Books have been added yet!</h3>
  }
  else
  {
    <ul class="capsule-list book-list">
    @foreach (Book book in Model)
    {
      <a href='@Url.Action("Details", new { id = book.BookId })'>
        <li>
          <div class="icon"></div>
          <div class="bold">@book.Title</div>
        </li>
      </a>
    }
    </ul>
  }
</div>

<div class="button-footer">
  @if(!User.IsInRole("Admin")){
      <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  } else {
  <a href='@Url.Action("Create")'>
    <button class="green">Create new Book</button>
  </a>
  <a href='@Url.Action("Index", "Home")'>
    <button>Home</button>
  </a>
  }

</div>
<hr />